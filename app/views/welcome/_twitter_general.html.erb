General Sentiment for <%= params[:search_term1] %>:
<br>
<% if @entity %>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th><%= params[:search_term1] %></th>
      <th>Intensity (score)</th>
      <th>Sentiment</th>
    </tr>
  </thead>

  <tbody>
    <% @entity.each do |entity| %>
    <tr>
      <td><%= entity["text"] %></td>
      <td><%= @sentiment["score"] %></td>
      <td><%= @sentiment["type"] %></td>
    </tr>
  </tbody><% end %>
</table>
<% end %>
